</section>
<!-- //covers -->
<!---728x90--->

<section class="w3l-donate">
  <div class="form-content">

  
    <div class="donate-form section-gap py-5">
      <div class="container py-md-3">
        <div class="heading text-center mx-auto">
					<h3 class="head">Create reservation</h3>
					<p class="my-3 head">Insert personal informations to create reservation at 
            <bold>@Model.Hotel.Naziv in @Model.Hotel.Grad , @Model.Hotel.Drzava</bold> 
            <br>
            From 
            <bold>@Model.aranzman.pocetak.ToShortDateString()</bold> 
            to 
            <bold>@Model.aranzman.kraj.ToShortDateString()</bold> 
            for 
            <bold>@Model.aranzman.cena </bold>&#8364
          </p>
					</div>
        <form  method="post" class="signin-form donate-form mt-5 pt-3">
          
          <input type="hidden" asp-for="@Model.aranzmanId">
          <input type="hidden" asp-for="@Model.HotelId">
          <div class="form-one">
            <div class="form-input">
              <label>First Name:</label>
              <input type="text" asp-for="@Model.ime" placeholder="Enter your first name.."  required/>
            </div>
            <div class="form-input">
              <label>Last Name:</label>
              <input type="text"asp-for="@Model.Prezime" placeholder="Enter your last name.." required>
            </div>
            <div class="form-input">
              <label>Passport no:</label>
              <input type="number" id="passport" asp-for="@Model.brojPasosa" placeholder="Enter your passport number.."  required/>
            </div>
            <div class="form-input">
              <label>Phone Number:</label>
              <input type="text" asp-for="@Model.brTelefona" placeholder="Phone.."  required/>
            </div>
            
            <div class="form-input">
              <label> State/Province:</label>
              <select asp-for="brojMesta" asp-items="@Model.kapacitet">
									<option value="">Select capacity</option>
								</select>
            </div>
            
            
          </div>
          
          <button class="btn button-eff">Book Now</button>
        </form>
      </div>
    </div>
  </div>
</section>
