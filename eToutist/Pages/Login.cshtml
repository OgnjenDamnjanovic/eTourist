@page
@model MyApp.Namespace.LoginModel
@{
}
<section class="w3l-login">
	<div class="login-bg section-gap">
		<div class="container">
		<!---728x90--->

				
			<div class="login-form">
				<h4 class="form-head">Welcome, Please Login</h4>
				<form method="post">
					<div class="">
						<p class="text-head">Email</p>
						<input type="text" required="" asp-for="email" placeholder="Please Enter Email.." class="input" />
					</div>
					<div class="">
						<p class="text-head">Password</p>
						<input type="password" required="" asp-for="sifra" placeholder="Please Enter Password.." class="input" />
						
					</div>
					<span class="error">@Model.ErrorMessage</span>
					<div class="d-grid align-login-register">
						<button type="submit" class="btn btn-theme4" asp-page-handler="Login">Login</button>
						<a asp-page="/Register" class="signuplink">Register New</a>
					</div>
				</form>

			</div>
		</div>
		<!---728x90--->

	</div>

</section>